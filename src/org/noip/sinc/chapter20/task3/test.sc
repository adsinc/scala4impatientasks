import java.io.File
import java.nio.file._

implicit def makeFileVisitor(f: Path => Unit) = new SimpleFileVisitor[Path] {
	override def visitFile(file: Path, attrs: attribute.BasicFileAttributes) = {
		f(file)
		FileVisitResult.CONTINUE
	}
}





